<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <FrameLayout
            android:layout_width="match_parent"
            android:layout_height="95dp"
            android:background="@drawable/rectangle_4">

            <ImageView
                android:id="@+id/back"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_margin="30dp"
                android:layout_gravity="left"
                android:src="@drawable/back"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_margin="30dp"
                android:text="Categories"
                android:layout_gravity="center_horizontal"
                android:textSize="16sp"
                android:textColor="#FFFFFF"
                android:fontFamily="@font/montserrat_bold" />

        </FrameLayout>

    </RelativeLayout>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:layout_marginTop="100dp">

        <TextView
            android:id="@+id/txt_name"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginStart="30dp"
            android:layout_marginEnd="30dp"
            android:fontFamily="@font/montserrat"
            android:text="Budget Name"
            android:textSize="16sp"
            android:textColor="#000000" />

        <EditText
            android:id="@+id/edt_name"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginStart="30dp"
            android:layout_marginTop="10dp"
            android:layout_marginEnd="30dp"
            android:layout_below="@+id/txt_name"
            android:inputType="text"
            android:hint="Enter budget name"
            android:textColor="#2743FD"
            android:textSize="16sp"
            android:fontFamily="@font/montserrat" />

        <TextView
            android:id="@+id/txt_description"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginStart="30dp"
            android:layout_marginEnd="30dp"
            android:layout_marginTop="10dp"
            android:layout_below="@+id/edt_name"
            android:text="Description"
            android:textSize="16sp"
            android:textColor="#000000"
            android:fontFamily="@font/montserrat" />

        <EditText
            android:id="@+id/edt_description"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginStart="30dp"
            android:layout_marginEnd="30dp"
            android:layout_marginTop="10dp"
            android:layout_below="@+id/txt_description"
            android:inputType="textMultiLine"
            android:minLines="3"
            android:textSize="16sp"
            android:hint="Enter budget description"
            android:textColor="#2743FD"/>

        <TextView
            android:id="@+id/txt_amount"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginStart="30dp"
            android:layout_marginEnd="30dp"
            android:layout_marginTop="10dp"
            android:layout_below="@+id/edt_description"
            android:text="Amount (RM)"
            android:textSize="16sp"
            android:textColor="#000000"
            android:fontFamily="@font/montserrat" />

        <EditText
            android:id="@+id/edt_amount"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginStart="30dp"
            android:layout_marginEnd="30dp"
            android:layout_marginTop="10dp"
            android:layout_below="@+id/txt_amount"
            android:textSize="16sp"
            android:hint="Enter amount"
            android:textColor="#2743FD"/>

        <Spinner
            android:id="@+id/spinner_month"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/edt_amount"
            android:layout_marginStart="30dp"
            android:layout_marginEnd="30dp"
            android:layout_marginTop="10dp"
            android:layout_gravity="left"
            android:gravity="left"
            android:spinnerMode="dropdown"
            android:background="@drawable/frame2"/>

        <Spinner
            android:id="@+id/spinner_category"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/spinner_month"
            android:layout_marginStart="30dp"
            android:layout_marginEnd="30dp"
            android:layout_marginTop="10dp"
            android:layout_gravity="left"
            android:gravity="left"
            android:spinnerMode="dropdown"
            android:background="@drawable/frame2"/>

        <Button
            android:id="@+id/btncomplete"
            android:layout_width="315dp"
            android:layout_height="wrap_content"
            android:layout_below="@id/spinner_category"
            android:layout_marginTop="60dp"
            android:layout_centerHorizontal="true"
            android:background="@drawable/rectangle_1"
            android:drawableRight="@drawable/complete"
            android:drawablePadding="10dp"
            android:gravity="center_horizontal|center_vertical"
            android:paddingLeft="30dp"
            android:paddingEnd="30dp"
            android:text="Complete"
            android:fontFamily="@font/montserrat"
            android:textColor="#2743FB"
            android:textSize="20sp" />

    </RelativeLayout>

</RelativeLayout>